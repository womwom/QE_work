&CONTROL
calculation = 'vc-relax'
prefix = 'STO'
restart_mode = 'from_scratch'
outdir='./STO'
pseudo_dir='~/q-e/pslibrary/pz/PSEUDOPOTENTIALS'
tprnfor   = .true.
wf_collect    = .true.
verbosity     = 'high'
forc_conv_thr = 1D-3
etot_conv_thr = 1D-4
/
&SYSTEM
   ibrav            = 1
   ntyp             = 3
   nat              = 5
   a = 3.896
   ecutwfc = 90
   ecutrho = 720
   occupations = 'smearing'
   smearing = 'm-p'
   degauss = 0.05
/
&ELECTRONS
    conv_thr = 1d-8
    electron_maxstep = 500
    mixing_mode      = 'plain'
    mixing_beta      = 0.05
    ! diagonalization = 'cg'
/
&IONS
ion_dynamics = 'bfgs'
/
&CELL
/

